	}
	.friendinlist .name {
		color: white;
		font-size: 11pt;
		font-weight: bold;
		display: inline-block;
		vertical-align: middle;
		margin-top: 4px;
	}
	.badge {
		height: 10px;
		width: 10px;
		border-radius: 5px;
		position: relative;
		left: 183px;
		top: -20px;
	}
	.badge.online {
		color: #6bc260;
		background-color: #6bc260;
	}
	.badge.shadow {
		box-shadow: 0 0 8px;
	}
	#friends {
		overflow-y: auto;
		width: 100%;
		background-color: #414042; 
		position: absolute;
		top: 59px;
		border-bottom: 1px solid #636466;
		border-top: 1px solid #636466;
		bottom: 50px;
	}
	#friends:empty:before {
		color: white;
		content: "You have no friends. :(";
